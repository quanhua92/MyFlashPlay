{
  "name": "myflashplay",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "start": "vite --port 3000",
    "build": "vite build",
    "build-strict": "pnpm test:markdown && vite build",
    "build:check": "vite build && tsc --project tsconfig.build.json --noEmit",
    "type-check": "tsc --noEmit",
    "serve": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:markdown": "tsx --tsconfig tsconfig.test.json tests/test-markdown-all.ts",
    "test:markdown:verbose": "VERBOSE=true tsx --tsconfig tsconfig.test.json tests/test-markdown-all.ts",
    "test:integration": "tsx scripts/integration-test.ts",
    "test:integration:local": "tsx scripts/integration-test.ts http://localhost:3000",
    "test:ultimate": "tsx scripts/ultimate-integration-test.ts",
    "test:ultimate:local": "tsx scripts/ultimate-integration-test.ts http://localhost:3000",
    "test:robust": "tsx scripts/robust-integration-test.ts",
    "test:robust:local": "tsx scripts/robust-integration-test.ts http://localhost:3000",
    "validate-translations": "tsx scripts/validate-translations.js",
    "test:integration:preview": "tsx scripts/integration-test.ts http://localhost:4173",
    "test:quick": "tsx scripts/quick-test.ts",
    "test:quick:local": "tsx scripts/quick-test.ts http://localhost:3000",
    "build:quick": "vite build",
    "test:self": "pkill -f vite || true && lsof -ti:4173 | xargs kill -9 2>/dev/null || true && sleep 1 && concurrently -k -s first --success first \"pnpm build:quick && pnpm serve --port 4173\" \"wait-on http://localhost:4173 --timeout 20000 && pnpm test:quick http://localhost:4173\"",
    "test:self:full": "pkill -f vite || true && lsof -ti:4173 | xargs kill -9 2>/dev/null || true && concurrently -k -s first \"pnpm build && timeout 180s pnpm serve --port 4173\" \"wait-on http://localhost:4173 --timeout 30000 && timeout 120s pnpm test:integration:preview\"",
    "test:self:ultimate": "pkill -f vite || true && lsof -ti:4173 | xargs kill -9 2>/dev/null || true && concurrently -k -s first \"pnpm build && timeout 300s pnpm serve --port 4173\" \"wait-on http://localhost:4173 --timeout 30000 && timeout 240s pnpm test:ultimate http://localhost:4173\""
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-router": "^1.121.2",
    "@tanstack/react-router-devtools": "^1.121.2",
    "@tanstack/router-plugin": "^1.121.2",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.23.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.525.0",
    "marked": "^16.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.0.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.6",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.0",
    "jsdom": "^26.0.0",
    "playwright": "^1.53.2",
    "tsx": "^4.20.3",
    "typescript": "^5.7.2",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "wait-on": "^8.0.3",
    "web-vitals": "^4.2.4"
  }
}